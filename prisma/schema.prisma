// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(cuid())
  username String 
  email String @unique
  password String?
  draws Draw[]

  group UserGroup[]

}

model Group {
  id    String @id @default(cuid())
  name String

  user UserGroup[]
  
  draws Draw[]

}

model Draw{
  id String @id @default(cuid())
  name String
  date DateTime @default(now())

  groupId String 
  groupDraw Group @relation(fields: [groupId],references: [id])

  userId String 
  result User @relation(fields:[userId],references: [id])
}

model UserGroup{
  userId String
  user User @relation(fields: [userId],references: [id])

  groupId String
  group Group @relation(fields: [groupId],references: [id])

  @@id([userId,groupId])
}